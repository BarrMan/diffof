    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug server",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "args": [
                "-r",
                "ts-node/register"
            ],
            "program": "${workspaceFolder}/packages/server/src/server.ts",
            "sourceMaps": true,
            // "smartStep": true,
            // "outFiles": [
            //     "${workspaceFolder/packages/server/dist/**/*.js"
            // ],
            "protocol": "inspector",
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "npm: build"
        }
    ]
}